language = "nodejs"

run = "npm run start"
modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Start app in dev mode"
mode = "sequential"
author = 10595772

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run compile"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start app in dev mode"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run compile && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[userenv]

[userenv.shared]
PORT = "5000"
